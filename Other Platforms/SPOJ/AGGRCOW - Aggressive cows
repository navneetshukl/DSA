    #include<iostream>
    #include<algorithm>
    using namespace std;
    bool place(long long n,long long c,long long m[],long long mindist)
    {
        long long prev=m[0];
        long long cnt=1;
        for(int i=1;i<n;i++)
        {
            if(m[i]-prev>=mindist)
            {
                prev=m[i];
                cnt++;
                if(cnt==c)
                {
                    return true;
                }
            }
        }
        return false;
    }
    int main()
    {
        long long t;
        cin>>t;
        while(t--)
        {
        long long n,c,i,ans=0;
        cin>>n>>c;
        long long m[n];
        for(i=0;i<n;i++)
        {
            cin>>m[i];
        }
        sort(m,m+n);
        long long s=0;
        long long e=m[n-1]-m[0];
        while(s<=e)
        {
            long long mid=(s+e)/2;
            bool cow=place(n,c,m,mid);
            if(cow)
                {
                    ans=mid;
                    s=mid+1;
                }
                else
                {
                    e=mid-1;
                }
        }
        cout<<ans<<endl;
        }
    }
     
